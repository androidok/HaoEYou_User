<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#3EB0FF"
        android:orientation="vertical">

        <com.haoeyou.user.widget.CircleImageView
            android:id="@+id/head_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:src="@drawable/login_head"/>

        <EditText
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/change"
            android:maxLength="10"
            android:padding="10dp"
            android:text="你数看看有没有十个字"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/base_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/icon_my_order"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="我的预约"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/icon_return"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="意见反馈"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/icon_about_us"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/icon_exit"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="退出登录"
            android:textColor="#3EB0FF"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
