    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d6e2f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <LinearLayout
                    android:id="@+id/first_layout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shouey_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/home_page_select"/>

                    <TextView
                        android:id="@+id/shouye_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center"
                        android:text="首页"
                        android:textColor="#3eb0ff"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_layout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/doctor_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/doctor_unselect"/>

                    <TextView
                        android:id="@+id/doctor_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center"
                        android:text="医生"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/third_layout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/message_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/message_nuselect"/>

                        <View
                            android:id="@+id/message_red"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_gravity="right"
                            android:background="@drawable/background_red_icon"
                            android:visibility="invisible"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/message_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center"
                        android:text="消息"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourth_layout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/report_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baogao_unselect"/>

                    <TextView
                        android:id="@+id/report_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:gravity="center"
                        android:text="档案"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>